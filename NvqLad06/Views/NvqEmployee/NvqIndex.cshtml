@model IEnumerable<NvqLab6.Models.NvqEmployee>
@{
    ViewData["Title"] = "Danh sách nhân viên";
}
<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center">
        <h2>Danh sách nhân viên</h2>
        <a href="/NvqEmployee/NvqCreate" class="btn btn-primary">Thêm mới</a>

    </div>

    <table class="table table-bordered table-striped mt-3">
        <thead>
            <tr>
                <th>Id</th>
                <th>Tên</th>
                <th>Ngày sinh</th>
                <th>Email</th>
                <th>Điện thoại</th>
                <th>Lương</th>
                <th>Trạng thái</th>
                <th>Hành động</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var NvqEmp in Model)
            {
                <tr>
                    <td class="text-center">@NvqEmp.NvqId</td>
                    <td>@NvqEmp.NvqName</td>
                    <td>@NvqEmp.NvqBirthDay.ToString("dd/mm/yyyy")</td>
                    <td>@NvqEmp.NvqEmail</td>
                    <td>@NvqEmp.NvqPhone</td>
                    <td class="text-end">@NvqEmp.NvqSalary.ToString("N0")</td>
                    <td class="text-center">
                        @if (NvqEmp.NvqStatus)
                        {
                            <span class="badge bg-success">Dang Lam</span>
                        }
                        else
                        {
                            <span class="badge bg-secondary">Nghi viec</span>
                        }
                    </td>
                    <td>
                        <a class="btn btn-warning" asp-action="NvqEdit" asp-route-id="@NvqEmp.NvqId">Sửa</a> |
                        <a class="btn btn-danger" asp-action="NvqDelete" asp-route-id="@NvqEmp.NvqId">Xóa</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>