@model TRANGQUANAO.ViewModels.FeedbackViewModel

<div class="container mt-4">
    <h2>Phản hồi khách hàng</h2>

    @if (TempData["Message"] != null)
    {
        <div class="alert alert-success">@TempData["Message"]</div>
    }

    <form asp-action="GuiPhanHoi" method="post">
        <div class="form-group">
            <label>Họ tên khách hàng</label>
            <input asp-for="TenKhachHang" class="form-control" required />
        </div>

        <div class="form-group mt-2">
            <label>Mức độ hài lòng</label><br />
            <select asp-for="MucDoHaiLong" class="form-control" id="mucDo" required>
                <option value="">-- Chọn --</option>
                <option>Rất hài lòng</option>
                <option>Hài lòng</option>
                <option>Không hài lòng</option>
            </select>
        </div>


        <div class="form-group mt-3">
            <label>Đánh giá (Số sao)</label><br />
            <div class="star-rating">
                <input type="radio" name="SoSao" value="5" /> ⭐⭐⭐⭐⭐<br />
                <input type="radio" name="SoSao" value="4" /> ⭐⭐⭐⭐<br />
                <input type="radio" name="SoSao" value="3" /> ⭐⭐⭐<br />
                <input type="radio" name="SoSao" value="2" /> ⭐⭐<br />
                <input type="radio" name="SoSao" value="1" /> ⭐<br />
            </div>
        </div>

        <div class="form-group mt-2" id="lyDoDiv" style="display:none;">
            <label>Lý do không hài lòng</label>
            <textarea asp-for="LyDoKhongHaiLong" class="form-control"></textarea>
        </div>

        <button type="submit" class="btn btn-primary mt-3">Gửi phản hồi</button>
    </form>
</div>

<script>
    document.getElementById("mucDo").addEventListener("change", function() {
        if (this.value === "Không hài lòng") {
            document.getElementById("lyDoDiv").style.display = "block";
        } else {
            document.getElementById("lyDoDiv").style.display = "none";
        }
    });
</script>
