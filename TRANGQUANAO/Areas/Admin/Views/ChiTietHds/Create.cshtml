@model TRANGQUANAO.Models.ChiTietHd

@{
    ViewData["Title"] = "Thêm mới chi tiết hóa đơn";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="card shadow-lg rounded-4">
    <div class="card-header bg-primary text-white">
        <h4 class="mb-0">Thêm mới chi tiết hóa đơn</h4>
    </div>

    <form asp-area="Admin" asp-controller="ChiTietHds" asp-action="Create" method="post">
        <div class="card-body">
            <div class="row g-3">
                <div class="col-md-6">
                    <label asp-for="MaHd" class="control-label"></label>
                    <select asp-for="MaHd" class="form-control" asp-items="ViewBag.MaHd"></select>
                    <span asp-validation-for="MaHd" class="text-danger"></span>
                </div>

                <div class="col-md-6">
                    <label asp-for="MaHh" class="control-label"></label>
                    <select asp-for="MaHh" class="form-control" asp-items="ViewBag.MaHh"></select>
                    <span asp-validation-for="MaHh" class="text-danger"></span>
                </div>

                <div class="col-md-6">
                    <label asp-for="DonGia" class="form-label fw-bold"></label>
                    <input asp-for="DonGia" class="form-control" type="number" step="0.01" />
                </div>

                <div class="col-md-6">
                    <label asp-for="SoLuong" class="control-label"></label>
                    <input asp-for="SoLuong" class="form-control" />
                    <span asp-validation-for="SoLuong" class="text-danger"></span>
                </div>

                <div class="col-md-6">
                    <label asp-for="GiamGia" class="form-label fw-bold"></label>
                    <input asp-for="GiamGia" class="form-control" type="number" />
                </div>
            </div>
        </div>

        <div class="card-footer text-end">
            <button type="submit" class="btn btn-success px-4">💾 Ghi lại</button>
            <a asp-action="Index" class="btn btn-secondary px-4">↩️ Quay lại</a>
        </div>
    </form>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}