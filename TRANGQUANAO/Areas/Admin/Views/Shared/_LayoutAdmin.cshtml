@{
    Layout = null;
    var tenDangNhap = Context.Session.GetString("TenDangNhap") ?? "Admin";
}

<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>@ViewData["Title"] - Trang Quản Trị</title>

    <!-- Bootstrap & Font Awesome -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css" rel="stylesheet" />

    <!-- Custom CSS -->
    <link href="~/css/admin.css" rel="stylesheet" />
</head>
<body>
    <div class="d-flex" id="wrapper">
        <!-- Sidebar -->
        <div class="bg-dark border-end" id="sidebar-wrapper">
            <div class="sidebar-heading text-white text-center py-4 fs-4 border-bottom">
                <i class="fa-solid fa-gears me-2"></i> ADMIN PANEL
            </div>

            <div class="list-group list-group-flush">
                <a asp-area="Admin" asp-controller="Home" asp-action="Index" class="list-group-item list-group-item-action bg-dark text-white">
                    <i class="fa-solid fa-house me-2"></i> Trang chủ
                </a>
                <a asp-area="Admin" asp-controller="HangHoas" asp-action="Index" class="list-group-item list-group-item-action bg-dark text-white">
                    <i class="fa-solid fa-shirt me-2"></i> Hàng hóa
                </a>
                <a asp-area="Admin" asp-controller="HoaDons" asp-action="Index" class="list-group-item list-group-item-action bg-dark text-white">
                    <i class="fa-solid fa-file-invoice me-2"></i> Hóa đơn
                </a>
                <a asp-area="Admin" asp-controller="ChiTietHds" asp-action="Index" class="list-group-item list-group-item-action bg-dark text-white">
                    <i class="fa-solid fa-clipboard-list me-2"></i> Chi tiết hóa đơn
                </a>
                <a asp-area="Admin" asp-controller="KhachHangs" asp-action="Index" class="list-group-item list-group-item-action bg-dark text-white">
                    <i class="fa-solid fa-users me-2"></i> Khách hàng
                </a>
                <a asp-area="Admin" asp-controller="NhaCungCaps" asp-action="Index" class="list-group-item list-group-item-action bg-dark text-white">
                    <i class="fa-solid fa-truck me-2"></i> Nhà cung cấp
                </a>
                <a asp-area="Admin" asp-controller="NhanViens" asp-action="Index" class="list-group-item list-group-item-action bg-dark text-white">
                    <i class="fa-solid fa-user-tie me-2"></i> Nhân viên
                </a>
                <a asp-area="Admin" asp-controller="Loais" asp-action="Index" class="list-group-item list-group-item-action bg-dark text-white">
                    <i class="fa-solid fa-layer-group me-2"></i> Loại sản phẩm
                </a>
            </div>
        </div>

        <!-- Page Content -->
        <div id="page-content-wrapper" class="flex-grow-1">
            <!-- Navbar -->
            <nav class="navbar navbar-expand-lg navbar-dark bg-primary border-bottom">
                <div class="container-fluid">
                    <button class="btn btn-light" id="menu-toggle">
                        <i class="fa-solid fa-bars"></i>
                    </button>
                    <span class="navbar-brand ms-2">Quản trị hệ thống </span>

                    <div class="ms-auto d-flex align-items-center">
                        <span class="text-white me-3">
                            <i class="fa-solid fa-user-circle me-1"></i> Xin chào, <strong>@tenDangNhap</strong>
                        </span>

                        <a asp-area="" asp-controller="KhachHang" asp-action="DangXuat"
                           class="btn btn-outline-light btn-sm">
                            <i class="fa-solid fa-right-from-bracket"></i> Đăng xuất
                        </a>
                    </div>
                </div>
            </nav>

            <!-- Main content -->
            <div class="container-fluid mt-4">
                @RenderBody()
            </div>
        </div>
    </div>

    <!-- Scripts -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
    <script>
        // Toggle sidebar
        document.getElementById("menu-toggle").addEventListener("click", function () {
            document.getElementById("wrapper").classList.toggle("toggled");
        });
    </script>

    @RenderSection("Scripts", required: false)
</body>
</html>
